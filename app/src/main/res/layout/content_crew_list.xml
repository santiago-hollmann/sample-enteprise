<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:id="@+id/content_crew_card_view"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/radius">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/view_padding"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <View
            android:id="@+id/content_crew_position_color"
            android:layout_width="@dimen/finger_size"
            android:layout_height="@dimen/finger_size"/>

        <TextView
            android:id="@+id/content_crew_multiplier"
            android:layout_width="@dimen/finger_size"
            android:layout_height="@dimen/finger_size"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:singleLine="true"
            android:textSize="@dimen/extra_big_text"/>

        <TextView
            android:id="@+id/content_crew_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/content_crew_multiplier"
            android:layout_toRightOf="@id/content_crew_position_color"
            android:maxLines="2"
            android:paddingLeft="@dimen/view_padding"
            android:paddingRight="@dimen/view_padding"
            android:textSize="@dimen/normal_text"/>

        <TextView
            android:id="@+id/content_crew_race"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/content_crew_name"
            android:layout_toLeftOf="@id/content_crew_multiplier"
            android:layout_toRightOf="@id/content_crew_position_color"
            android:paddingLeft="@dimen/view_padding"
            android:paddingRight="@dimen/view_padding"
            android:singleLine="true"
            android:textSize="16sp"/>
    </RelativeLayout>
</android.support.v7.widget.CardView>
